<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/prescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16sp"
        android:paddingBottom="16sp"
        >

        <TextView
            android:id="@+id/order_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Paracetamol"
            />

        <TextView
            android:id="@+id/order_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            tools:text="Started on Apr 21 at 12:34"
            />

        <TextView
            android:id="@+id/execution_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            tools:text="Given 2 times today, Apr 22"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/execution_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="16sp"
        android:orientation="horizontal"
        >

        <ToggleButton
            android:id="@+id/execute_toggle"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/toggle_button_selector"
            android:checked="false"
            android:paddingBottom="12sp"
            android:paddingTop="12sp"
            android:textAppearance="@style/text"
            android:textColor="#fff"
            android:textOff="@string/order_execution_mark_as_given_now"
            android:textOn="@string/order_execution_marked_as_given_now"
            />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#f66"
            android:paddingBottom="12sp"
            android:paddingTop="12sp"
            android:text="@string/order_execution_delete_selected"
            android:textAppearance="@style/text"
            android:textColor="#fff"
            />

    </LinearLayout>

</LinearLayout>
