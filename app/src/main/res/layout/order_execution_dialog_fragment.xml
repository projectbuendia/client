<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/order_instructions"
        android:text="Medication and dosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/text.heading" />

    <TextView
        android:id="@+id/order_start_time"
        android:text="Started on Date at Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24sp" />

    <TextView
        android:id="@+id/order_execution_count"
        android:text="Given N times today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/order_execution_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16sp"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:paddingBottom="0sp"
        android:layout_marginTop="12sp"
        android:text="11:30&#x0a;12:45"
        android:lineSpacingMultiplier="1.5"
        android:background="#ddd" />

    <ToggleButton
        android:id="@+id/order_execution_mark_toggle"
        android:textOn="@string/order_execution_marked_as_given"
        android:textOff="@string/order_execution_mark_as_given"
        android:padding="24sp"
        android:layout_marginTop="32sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toggle_button_selector"
        android:textColor="#fff"
        android:checked="false"/>

</LinearLayout>
