<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

  <org.odk.collect.android.views.WrappingRadioGroup
      android:id="@+id/order_category"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="-4sp"
      android:layout_marginBottom="8sp"
      >

    <RadioButton
        android:id="@+id/oral_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:checked="true"
        android:text="@string/oral_category_abbr"
        />

    <RadioButton
        android:id="@+id/injectable_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/injectable_category_abbr"
        />

    <RadioButton
        android:id="@+id/infusible_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/infusible_category_abbr"
        />

    <RadioButton
        android:id="@+id/external_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/external_category_abbr"
        />

    <RadioButton
        android:id="@+id/vaccine_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vaccine_category_abbr"
        />

  </org.odk.collect.android.views.WrappingRadioGroup>

  <TableLayout
      android:id="@+id/order"
      android:paddingLeft="4sp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      >

    <TableRow
        android:id="@+id/medication_row"
        style="@style/order_table_row"
        >

      <TextView
          style="@style/field_label"
          android:layout_column="0"
          android:text="@string/order_drug"
          android:labelFor="@id/order_medication"
          />

      <AutoCompleteTextView
          android:id="@+id/order_medication"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_weight="1"
          android:ems="15"
          android:inputType="textCapSentences|textNoSuggestions"
          android:maxLength="80"
          android:imeOptions="actionNext"
          android:nextFocusDown="@id/order_dosage"
          android:nextFocusRight="@id/order_dosage"
          tools:text="Paracetamol"
          />

    </TableRow>

    <TableRow
        android:id="@+id/format_row"
        style="@style/order_table_row"
        >

      <TextView
          style="@style/field_label"
          android:layout_column="0"
          android:text="@string/order_format"
          android:labelFor="@id/order_format"
          />

      <Spinner
          android:id="@+id/order_format"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_weight="1"
          />

    </TableRow>

    <TableRow
        android:id="@+id/dosage_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:minHeight="40sp"
        >

      <TextView
          style="@style/field_label"
          android:layout_column="0"
          android:text="@string/order_dosage"
          android:labelFor="@id/order_dosage"
          />

      <LinearLayout style="@style/order_cell_container">

        <EditText
          android:id="@+id/order_dosage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ems="3"
          android:inputType="numberDecimal"
          android:maxLength="4"
          android:imeOptions="actionNext"
          android:nextFocusUp="@id/order_medication"
          android:nextFocusLeft="@id/order_medication"
          android:nextFocusDown="@id/order_volume"
          android:nextFocusRight="@id/order_volume"
          android:gravity="right|center_vertical"
          tools:text="100"
          />

      <TextView
          android:id="@+id/order_dosage_units"
          style="@style/inner_field_label"
          android:layout_weight="1"
          tools:text="capsules"
          />

      <Spinner
          android:id="@+id/order_route"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          />

      </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/infusion_rate_row"
        android:visibility=""
        style="@style/order_table_row"
        >

      <TextView
          style="@style/field_label"
          android:layout_column="0"
          android:text="@string/order_dosage"
          android:labelFor="@id/order_volume"
          />

      <LinearLayout style="@style/order_cell_container">

        <EditText
            android:id="@+id/order_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:imeOptions="actionNext"
            android:gravity="right|center_vertical"
            tools:text="1500"
            android:nextFocusUp="@id/order_dosage"
            android:nextFocusLeft="@id/order_dosage"
            android:nextFocusRight="@id/order_infusion_duration"
            android:nextFocusDown="@id/order_frequency"
            />

        <TextView
            android:id="@+id/order_volume_units"
            style="@style/inner_field_label"
            android:text="mL in"
            />

        <EditText
            android:id="@+id/order_infusion_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:imeOptions="actionNext"
            android:gravity="right|center_vertical"
            tools:text="8"
            android:nextFocusUp="@id/order_dosage"
            android:nextFocusLeft="@id/order_volume"
            android:nextFocusRight="@id/order_frequency"
            android:nextFocusDown="@id/order_frequency"
            />

        <TextView
            android:id="@+id/order_infusion_duration_units"
            style="@style/inner_field_label"
            android:text="@string/order_hours"
            />

      </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/is_series_row"
        style="@style/order_table_row"
        android:layout_marginTop="16sp"
        >

      <TextView
          style="@style/field_label"
          android:layout_column="0"
          android:text="Give"
          android:labelFor="@id/order_is_series"
          />

      <org.odk.collect.android.views.WrappingRadioGroup
          android:id="@+id/order_is_series"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_column="1"
          android:layout_marginTop="2sp"
          >

        <RadioButton
            android:id="@+id/order_unary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/once"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/order_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiple_times"
            />

      </org.odk.collect.android.views.WrappingRadioGroup>

    </TableRow>

    <TableRow
        android:id="@+id/frequency_row"
        android:visibility=""
        style="@style/order_table_row"
        >

      <LinearLayout style="@style/order_cell_container">

        <EditText
            android:id="@+id/order_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:digits="0123456789"
            android:ems="3"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:imeOptions="actionNext"
            android:nextFocusUp="@id/order_frequency"
            android:nextFocusLeft="@id/order_frequency"
            android:nextFocusRight="@id/order_series_duration"
            android:nextFocusDown="@id/order_series_duration"
            />

        <TextView
            android:id="@+id/order_frequency_units"
            style="@style/inner_field_label"
            android:text="@string/order_times_per_day"
            android:labelFor="@id/order_frequency"
            />

      </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/series_duration_row"
        android:visibility=""
        style="@style/order_table_row"
        >

      <TextView
          style="@style/field_label"
          android:layout_column="0"
          android:text="@string/order_series_duration_prefix"
          android:labelFor="@id/order_series_duration"
          />

      <LinearLayout style="@style/order_cell_container">

        <EditText
            android:id="@+id/order_series_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:digits="0123456789"
            android:ems="3"
            android:inputType="numberDecimal"
            android:maxLength="2"
            android:imeOptions="actionNext"
            android:nextFocusUp="@id/order_frequency"
            android:nextFocusLeft="@id/order_frequency"
            android:nextFocusRight="@id/order_notes"
            android:nextFocusDown="@id/order_notes"
            />

        <TextView
            android:id="@+id/order_series_duration_units"
            style="@style/inner_field_label"
            android:layout_column="2"
            android:text="@string/order_days"
            />

      </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/schedule_description_row"
        style="@style/order_table_row"
        android:layout_marginTop="8sp"
        >

      <TextView
          android:id="@+id/order_schedule_description"
          style="@style/field_label"
          android:layout_column="1"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginStart="12sp"
          android:layout_marginEnd="0sp"
          android:layout_gravity="top|start"
          android:gravity="start|top"
          android:minLines="2"
          tools:text="(commencé le 29 août; après 10 doses, arrêter le 31 août)"/>
      />

    </TableRow>

    <TableRow
        android:id="@+id/notes_row"
        style="@style/order_table_row"
        android:layout_marginTop="16sp"
        >

      <TextView
          style="@style/field_label"
          android:layout_gravity="top"
          android:layout_column="0"
          android:layout_marginTop="0sp"
          android:text="@string/order_notes"
          android:labelFor="@id/order_notes"
          />

      <EditText
          android:id="@+id/order_notes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="1"
          android:layout_weight="1"
          android:inputType="textMultiLine|textCapSentences"
          android:minLines="2"
          android:gravity="top|start"
          android:imeOptions="actionNone"
          android:nextFocusUp="@id/order_series_duration"
          android:nextFocusLeft="@id/order_series_duration"
          tools:text="Administer carefully"
          />

    </TableRow>

  </TableLayout>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16sp"
      android:orientation="horizontal"
      >

    <Button
        android:id="@+id/order_stop_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16sp"
        android:text="@string/order_stop_now"
        />

    <Button
        android:id="@+id/order_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginBottom="16sp"
        android:text="@string/order_delete"
        />

  </LinearLayout>

</LinearLayout>
